            <ColumnDefinition Width="367*"/>
            <ColumnDefinition Width="425*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2" RenderTransformOrigin="0.5,0.5" Margin="0,0,100,66">
